{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "Node",
        "declaration": true,
        "jsx": "react-jsx",
        "allowJs": true,
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
        }
    },
    "include": ["src"]
}
